{{#each erros}}
<div class="fixed-top mt-5 container fadeOut animated faster delay-5s">
    <div class="alert alert-danger mt-5 bounceInDown animated " role="alert">{{texto}}</div>
</div>
{{else}}
{{/each}}

<div class="container-fluid desktopIndexTeam d-none d-md-block d-lg-none d-none d-lg-block d-xl-none d-none d-xl-block"
    id="conteudoPaginaDesktop">

    <div class="border-title ">
        <h7 class="text-light pl-1 ml-2" id="home">Play / Teams</h7>
        <h1 class="text-light pl-1 ml-2">TEAMS</h1>
    </div>

    <div class="box">
        <a href="/teams/create">
            <button type="button" class="btn btn_time mb-3 text-light">CREATE TEAMS</button>
        </a>
    </div>
    <div class="container-fluid bg-252525 " id="teamCreate">
        <div class="row text-center p-3">
            <h3 class="col-4 text-light" style="font-size: 2.1vh;">Name team</h3>
            <h3 class="col-4 text-light" style="font-size: 2.1vh;">Game</h3>
            <h3 class="col-4 text-light" style="font-size: 2.1vh;">Options</h3>
        </div>

    </div>
    <div class=" mt-3 times container-fluid " style="height:62vh;overflow:auto;">
        {{#each equipe}}
        <div class="bg-252525 mt-2 text-center p-3 container-fluid mx-auto shadow-under">
            {{!-- <span class=" col-1 ">
                <div class="">
                    
                </div>
            </span> --}}
            <div class="row my-auto ml-auto">
                <div class="col-1 ml-n2">
                    <img src="data:image/png;base64,{{foto_time}}" width="70vh" class="ml-n4 img-fluid rounded-circle"
                        alt="">
                </div>
                <div class="col-1"></div>
                <h3 class="col-2 text-light my-auto" style="font-size: 2vh;">
                    <span class="ml-n5">
                        <span class="ml-n5">
                            <span class="ml-n5">{{nomeTeam}}
                                ({{tagTeam}})</span>
                        </span>
                    </span>
                </h3>
                <h3 class="col-4 text-light my-auto" style="font-size: 2vh;">CSGO</h3>
                <h3 class="col-4 text-light my-auto" style="font-size: 2vh;">VISIT TEAM PROFILE <span
                        class="mr-5 ml-1"></span>
                    EDIT
                    TEAM</h3>
            </div>
        </div>
        {{else}}{{/each}}
    </div>

</div>


<div class="container-fluid mobileIndexTeam d-block d-sm-none d-none d-sm-block d-md-none" id="conteudoPagina">

    <div class="border-title mt-2">
        <h7 class="text-light pl-1 ml-2" id="home">Play / Teams</h7>
        <h1 class="text-light pl-1 ml-2">TEAMS</h1>
    </div>

    <div class="box">
        <a href="/teams/create">
            <button type="button" class="btn btn_time mb-3 text-light">CREATE TEAMS</button>
        </a>
    </div>

    <div class="container-fluid bg-252525 " id="teamCreate">
        <div class="row text-center p-3">
            <h3 class="mr-auto ml-3 text-light" style="font-size: 2.1vh;">Tag team</h3>

            <h3 class="ml-auto mr-3 text-light" style="font-size: 2.1vh;">Game</h3>
        </div>

    </div>

    <div class="mt-2" style="height:66vmax;overflow:auto;">
        {{#each equipe}}
        <div class="mt-3 times container-fluid pr-1 pl-1 container-fluid">
            <div class="bg-252525 mt-2 row text-center p-3 container-fluid mx-auto">
                <div class="row">
                    <img src="data:image/png;base64,{{foto_time}}" class="img-fluid mr-2 ml-2" width="40vh" height="10"
                        alt="">
                    <h3 class="mt-1 text-light" style="font-size: 2vh;">{{tagTeam}}</h3>
                </div>
                <div class="row ml-auto mr-1">
                    {{!-- <img src="/images/icones/icons-time/jogo.svg" class="img-fluid " width="20vh" height="10" alt=""> --}}
                    <img src="/images/icones-usuario/3dots.svg" class="img-fluid ml-3" alt="">
                </div>
            </div>

        </div>
        {{else}}{{/each}}
    </div>


</div>

<script>
    $(document).ready(() => {
        let height = $(window).height();
        let width = $(window).width();
        console.log(width);

        if (width >= 1200) {
            $('#conteudoPagina').remove()
            console.log("É maior ou igual a 1200")
        }
        else if (width >= 992) {
            $('#conteudoPagina').remove()
            console.log("É maior ou igual a 992")
        }
        else if (width >= 768) {
            $('#conteudoPagina').remove()
            console.log("É maior ou igual a 768")
        }
        else if (width >= 576) {
            $('#conteudoPaginaDesktop').remove()
            console.log("É maior ou igual a 576")
        }
        else if (width < 576) {
            $('#conteudoPaginaDesktop').remove()
            console.log("É menor que 576")
        }
    })
</script>